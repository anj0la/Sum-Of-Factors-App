<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutputActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha=".4"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/letsgoo"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/titleOutputPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#7E6C6A"
        android:shadowDx="10"
        android:shadowDy="15"
        android:shadowRadius="5"
        android:text="@string/sum_of_factors"
        android:textColor="#CDB1AD"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/outputInformation"
        android:layout_width="326dp"
        android:layout_height="107dp"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#5A5758"
        android:shadowDx="5"
        android:shadowDy="7"
        android:shadowRadius="5"
        android:text="@string/click_on_the_button_to_enter_another_number"
        android:textAlignment="center"
        android:textColor="#B1ABAC"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/output"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/output"
        android:layout_width="451dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#5A5758"
        android:shadowDx="5"
        android:shadowDy="7"
        android:shadowRadius="5"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textColor="#B1ABAC"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleOutputPage"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/carter_one"
        android:onClick="homePage"
        android:text="@string/home"
        android:textColor="#7E6C6A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>